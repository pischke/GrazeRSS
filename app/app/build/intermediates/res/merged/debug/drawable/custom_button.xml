<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="#600"
				android:endColor="#c00"
				android:angle="90" />
			<stroke
				android:width="1dp"
				android:color="#666" />
			<corners
				android:radius="2dp" />
			<padding
				android:left="5dp"
				android:top="2dp"
				android:right="5dp"
				android:bottom="2dp" />
		</shape>
	</item>

	<item
		android:state_focused="true">
		<shape>
			<gradient

				android:startColor="#850"
				android:endColor="#fa0"
				android:angle="90" />
